<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('header.ejs') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Profile</title>
</head>

<body>

    <%- include('nav.ejs') %>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Points</th>
                    <th scope="col">Email</th>
                    <% if (trusts) { %>
                    <th scope="col">Trusts</th>
                    <% } %>
                    <th scope="col">Trusted By</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.points %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <% if (trusts) { %>
                    <td>
                        <li><a href="/profile/<%= trusts._id.toString() %>"><%= trusts.name %> </a> </li>
                    </td>
                    <% } %>
                    <td>
                        <%= trusted_by.length %>
                    </td>
                </tr>
            </tbody>
        </table>
        <section>

            <% if (user.movements) { %>
                <h4> User Movements </h4>
                <div class="container mb-3" style="max-width: 25rem;">
                    <% user.movements.forEach(mv=> { %>
                        <!-- idk if this works actually -->
                        <div>
                            <div class="card bg-success">

                                <h3 class="card-title">
                                    <%= mv.name %>
                                </h3>
                                <p>
                                    <%= mv.description %>
                                </p>




                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } else { %>
                    <div class="container">
                        <h1> No Movements</h1>
                    </div>
                    <% } %>
                        </div>
        </section>

</body>

</html>