<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('header.ejs') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>home</title>
</head>

<%- include('nav.ejs') %>

    <body>

        <section class="bg-info pt-5 pb-5 mb-10">

            <div class="container p-6">
                <h1 class="text-center p-3">Community </h1>
                <form action="/community/Create" method="post" class="bd-search hidden-sm-down small" enctype="multipart/form-data" method="post">
                    <input type="text" class="form-control bg-graylight border-0 font-weight-bold" id="name" name="name" placeholder="Name" autocomplete="off">
                    <br>
                    <br>
                    <input type="text" class="form-control bg-graylight border-0 font-weight-bold" id="description" name="description" placeholder="description" autocomplete="off">
                    <br>
                    <input type="number" class="form-control bg-graylight border-0 font-weight-bold" id="goal" name="goal" placeholder="goal" autocomplete="off">
                    <br>
                    <br>
                    <input type="file" id="image" name="image" value="">
                    <br>
                    <br>
                    <button class="btn-indigo btn" type="submit"> Create </button>
                    <!-- gist
                    <% movements.forEach(mv => { %>
                        <div class="d-flex row">
                        <div class="card">
                             <h3 class="card-title">
                                    <%= mv.name %>
                                </h3>
                                <p>
                                    <%= mv.description %>
                                </p>
                        </div>
                    </div>
                        <%})%>
                    -->

                </form>

            </div>
        </section>

        <section>
            <% if (movements) { %>
                <h4> Movements </h4>
                <div class="container mb-3" style="max-width: 25rem;">
                    <% movements.forEach(movement=> { %>
                        <%- include('movementPane.ejs', {movement : movement, user : user}) %>
                            <% }) %>
                </div>
                <% } else { %>
                    <div class="container">
                        <h1> No Movements</h1>
                    </div>
                    <% } %>
                        </div>
        </section>

    </body>

</html>